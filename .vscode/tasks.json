{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run debug",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "-v"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build release",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release", "-v"],
      "group": "build"
    }
  ]
}